{# src/OC/PlatformBundle/Resources/views/Default/index.html.twig #}

{% extends "AFCRunningPlatformBundle::layout.html.twig" %}

{% block title %}
AFCRunning - {{name.nom}}
{%endblock title %}

{% block name %}
  <div class="row">
   <span class="text-info">
   {% for names in name %}
       <h1> {{name.nom}} </h1>
  {% endfor %}
   </span>
   <hr/>
 </div>
{% endblock name %}

{% block container %}
{% if action == 'add' %}
    <div class="row">
      {{ form_start(form) }}
      {{ form_widget(form) }}
      {{ form_end(form) }}
    </div>
{% endif %}

{% if action == 'view' %}
    {% for defi in defis %}
      AAAAAAAAA  <h1> {{defi.temps}} </h1>
    {% endfor %}
{% endif %}

{% endblock %}
